<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinAppProject.NewCharPage"
             Title="Character Creation"
             BackgroundColor="Wheat">
    
    <ContentPage.Content>
        <!-- stacklayout followed by the entrys where the data is input and finally a save button that called a method to save the data to the database-->
        <StackLayout Margin="10,10,10,0">
            <Entry x:Name="nameEntry" 
                   Placeholder="Character Name"/>
            <Entry x:Name="classEntry"
                   Placeholder="Character Race, Followed by their Class"/>
            <Button Text="Save"
                    Clicked="Button_Clicked"
                    Padding="50"
                    Margin="10"
                    BorderWidth="1"
                    BackgroundColor="#689EB8"
                    BorderColor="#A79B94"
                    TextColor="#F3F4F6"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>